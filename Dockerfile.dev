# Development Dockerfile for Release Radar
FROM node:20-alpine AS dev

# Install dependencies
RUN apk add --no-cache libc6-compat

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Expose port
EXPOSE 9002

# Start development server
CMD ["npm", "run", "dev"]
